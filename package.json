{
  "name": "ai-cr",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ai-cr": "dist/cli.js",
    "cr": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    ".env.example",
    "docs/"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.prod.json && cp src/rules/*.json dist/rules/",
    "build:dev": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "dev:lib": "tsx src/index.ts",
    "type-check": "tsc --noEmit",
    "type-check:prod": "tsc --project tsconfig.prod.json --noEmit",
    "prepublishOnly": "npm run build",
    "package": "npm run clean && npm run build && npm pack",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ai",
    "code-review",
    "cli",
    "typescript",
    "git",
    "static-analysis",
    "code-quality",
    "automation",
    "developer-tools",
    "qwen",
    "dashscope"
  ],
  "author": "AI-CR Team",
  "license": "MIT",
  "description": "AI-powered code review tool with intelligent analysis and automated reporting",
  "homepage": "https://github.com/your-username/ai-cr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ai-cr.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-cr/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.2.1",
    "@types/unist": "^3.0.3",
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "inquirer": "^12.9.2",
    "markdown-it": "^14.1.0",
    "mdast-builder": "^1.1.1",
    "openai": "^5.12.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "unified": "^11.0.5",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2"
  }
}
