{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // 生产环境：放松类型检查，确保能成功编译
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    
    // 允许未使用的变量和参数（方便快速开发和打包）
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    // 生产环境优化
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false
  }
}